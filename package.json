{
  "name": "net-monitoring",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "server": "nodemon ./bin/www",
    "cleanup": "rimraf client/build && rimraf dist",
    "build": "npm run cleanup && npm run build --prefix client && npx pkg . --debug",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cookie-parser": "~1.4.4",
    "express": "~4.16.1",
    "ping": "^0.4.4"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1"
  },
  "bin": "./bin/www",
  "pkg": {
    "scripts": [
      "bin"
    ],
    "targets": [
      "win"
    ],
    "assets": [
      "client/build/*",
      "client/build/static/js/*",
      "client/build/static/css/*"
    ],
    "outputPath": "dist"
  }
}

  },
  "name": "net-monitoring",
  "version": "1.1.0",
  "main": "dist/main/main.js",
  "description": "Приложение для проверки оборудования в сети",
  "scripts": {
    "lint": "npx eslint .",
    "start-renderer": "webpack serve --config webpack/renderer.dev.ts",
    "start-main": "set RENDERER_URL=http://localhost:3003&& webpack --config webpack/main.dev.ts && electron-forge start",
    "start": "concurrently \"npm run \"start-renderer\"\" \"wait-on tcp:127.0.0.1:3003 && npm run \"start-main\"\"",
    "build": "webpack --config webpack/main.prod.ts && webpack --config webpack/renderer.prod.ts",
    "package": "set NODE_TLS_REJECT_UNAUTHORIZED=0&& electron-forge package",
    "make": "set NODE_TLS_REJECT_UNAUTHORIZED=0&& electron-forge make",
    "prod": "npm run build && npm run package && npm run make"
  },
  "dependencies": {
    "@ant-design/icons": "^5.6.1",
    "@reduxjs/toolkit": "^2.6.0",
    "antd": "^5.24.3",
    "clsx": "^2.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@electron-forge/cli": "^7.7.0",
    "@electron-forge/maker-deb": "^7.7.0",
    "@electron-forge/maker-rpm": "^7.7.0",
    "@electron-forge/maker-squirrel": "^7.7.0",
    "@electron-forge/maker-zip": "^7.7.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.7.0",
    "@electron-forge/plugin-fuses": "^7.7.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.13.9",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "ajv": "^8.17.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron": "^28.1.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.1.0",
    "html-webpack-plugin": "^5.6.0",
    "jiti": "^2.4.2",
    "prettier": "3.5.3",
    "sass": "^1.85.1",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.32.1",
    "wait-on": "^8.0.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0",
    "webpack-merge": "^6.0.1"
  }
}
